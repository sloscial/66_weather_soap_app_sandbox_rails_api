= panel heading: 'Resend Confirmation Instructions' do
  = simple_form_for resource, url: confirmation_path(resource_name) do |f|
    = f.error_notification
    = f.error :base
  
    = f.input :email, autofocus: true, wrapper: :bootstrap_basic
    = btn_submit f, 'Resend confirmation'
  
= render 'devise/shared/links'
