.page-header
  %h1 Edit #{resource_name.to_s.humanize}

= simple_form_for resource, url: admin_registration_path(resource_name), html: {class: 'form-horizontal'} do |f|
  = f.error_notification
  = f.error :base

  = f.input :email, autofocus: true

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %p
      Currently waiting confirmation for:
      = resource.unconfirmed_email

  = f.input :password, hint: 'Leave blank if you don\'t want to change it'
  = f.input :password_confirmation
  = f.input :current_password, hint: 'Your current password is required to confirm changes'
  
  .form-actions
    = btn_submit f, 'Update'
    = btn_link_to 'Cancel', main_app.admin_root_path, type: :link
