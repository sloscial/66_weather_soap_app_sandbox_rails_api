= panel heading: 'Change Password' do
  = simple_form_for resource, as: resource_name, url: password_path(resource_name) do |f|
    = f.error_notification
    = f.error :base
  
    = f.hidden_field :reset_password_token
  
    = f.input :password, autofocus: true, label: 'New password', wrapper: :bootstrap_basic
    = f.input :password_confirmation, label: 'Confirm new password', wrapper: :bootstrap_basic
    = btn_submit f, 'Change password'
  
= render 'devise/shared/links'
